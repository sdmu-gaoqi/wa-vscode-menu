{
  "name": "wa-menus",
  "displayName": "wa-menus",
  "description": "vscode菜单扩展",
  "icon": "img/avatar.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "wa-xlsx-to-ts(目标xlsx文件保存自动生成langules.ts文件)",
      "properties": {
        "xlsxDefaultLan": {
          "type": "string",
          "default": "zh-CN",
          "description": "首选默认语言"
        },
        "xlsxTransformPath": {
          "type": "string",
          "default": "src/locales",
          "description": "转换的文件输出地址"
        },
        "xlsxTransformType": {
          "type": "string",
          "default": "ts",
          "description": "转换的文件类型(ts or js)"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "extension.xlsxToTs",
          "when": "resourceLangId == xlsx",
          "group": "typescript support"
        },
        {
          "command": "extension.createRfc",
          "group": "typescript support",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.createVue",
          "group": "typescript support",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/title/context": [
        {
          "command": "extension.xlsxToTs",
          "when": "resourceLangId == xlsx",
          "group": "typescript support"
        }
      ]
    },
    "languages": [
      {
        "id": "xlsx",
        "extensions": [
          ".xlsx",
          ".xlsm"
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.xlsxToTs",
        "title": "xlsx转ts"
      },
      {
        "command": "extension.createRfc",
        "title": "生成rfc组件"
      },
      {
        "command": "extension.createVue",
        "title": "生成vue组件"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package",
    "create-publisher": "vsce create-publisher",
    "vpub": "vsce publish",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "release-it": "^17.0.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "prettier": "^3.1.0",
    "xlsx": "^0.18.5"
  },
  "publisher": "wa",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": "git@github.com:sdmu-gaoqi/wa-csvToTs.git",
  "author": "gaoqi <1224362143@qq.com>"
}
